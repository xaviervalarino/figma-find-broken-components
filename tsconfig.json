{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
  },
  "include": ["./src/**/*.ts", "src/**/*.svelte"]
}
